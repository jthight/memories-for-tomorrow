#!/bin/bash

cp $HOME/.vimrc $HOME/src/memories-for-tomorrow/files/
cp $HOME/.vimrc $HOME/src/ansible/data/
cp $HOME/.vimrc $HOME/src/secret_stuff/
cp $HOME/.vimrc /mnt/c/Users/jthig/Dropbox/Documents/dotfiles/
cp $HOME/.vimrc /mnt/c/Users/jthig/OneDrive/Documents/dotfiles/
cp $HOME/.vimrc /mnt/c/Users/jthig/OneDrive/Documents/dotfiles/_vimrc
cp $HOME/.vimrc /mnt/c/Users/jthig/Dropbox/Documents/dotfiles/_vimrc
cp $HOME/.vimrc $HOME/src/memories-for-tomorrow/files/_vimrc
cp $HOME/.vimrc $HOME/src/ansible/data/_vimrc
cp $HOME/.vimrc $HOME/src/secret_stuff/_vimrc
cp $HOME/.vim/UltiSnips/* $HOME/src/memories-for-tomorrow/files/.vim/UltiSnips/
cp $HOME/.vim/UltiSnips/* $HOME/src/ansible/data/.vim/UltiSnips/
cp $HOME/.vim/UltiSnips/* /mnt/c/Users/jthig/Dropbox/Documents/dotfiles/UltiSnips/
cp $HOME/.vim/UltiSnips/* /mnt/c/Users/jthig/OneDrive/Documents/dotfiles/UltiSnips/
cp /mnt/c/Users/jthig/plugcheetsheet.txt /mnt/c/Users/jthig/Dropbox/Documents/dotfiles/
cp /mnt/c/Users/jthig/plugcheetsheet.txt /mnt/c/Users/jthig/OneDrive/Documents/dotfiles/
cp $HOME/.vim/thesaurus/* $HOME/src/memories-for-tomorrow/files/.vim/thesaurus/
cp $HOME/.vim/thesaurus/* $HOME/src/ansible/data/.vim/thesaurus/
cp $HOME/.vim/thesaurus/* /mnt/c/Users/jthig/Dropbox/Documents/dotfiles/thesaurus/
cp $HOME/.vim/thesaurus/* /mnt/c/Users/jthig/OneDrive/Documents/dotfiles/thesaurus/
cd $HOME/src/memories-for-tomorrow/
# Add all files to the repository 
git add .
# Commit changes with message with current date stamp
git commit -m "vim files on `date +'%d-%m-%Y %H:%M:%S'`"
# Push changes towards GitHub
git push -u origin master
cd $HOME/src/secret_stuff/
# Add all files to the repository 
git add .
# Commit changes with message with current date stamp
git commit -m "vim files on `date +'%d-%m-%Y %H:%M:%S'`"
# Push changes towards GitHub
git push -u origin main
cd $HOME/src/ansible/
# Add all files to the repository 
git add .
# Commit changes with message with current date stamp
git commit -m "vim files on `date +'%d-%m-%Y %H:%M:%S'`"
# Push changes towards GitHub
git push -u origin main
