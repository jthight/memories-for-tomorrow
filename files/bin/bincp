#!/bin/bash

cp $HOME/bin/cleandots $HOME/src/memories-for-tomorrow/files/bin/
cp $HOME/bin/cleandots $HOME/src/ansible/data/bin/
cp $HOME/bin/pulldots $HOME/src/memories-for-tomorrow/files/bin/
cp $HOME/bin/pulldots $HOME/src/ansible/data/bin/
cp $HOME/bin/dotsscp $HOME/src/memories-for-tomorrow/files/bin/
cp $HOME/bin/dotsscp $HOME/src/ansible/data/bin/
cp $HOME/bin/pullgit $HOME/src/memories-for-tomorrow/files/bin/
cp $HOME/bin/pullgit $HOME/src/ansible/data/bin/
cp $HOME/bin/bincp $HOME/src/memories-for-tomorrow/files/bin/
cp $HOME/bin/bincp $HOME/src/ansible/data/bin/
# Add all files to the repository 
cd $HOME/src/memories-for-tomorrow/
git add .
# Commit changes with message with current date stamp
git commit -m "$HOME/bin files on `date +'%d-%m-%Y %H:%M:%S'`"
# Push changes towards GitHub
git push -u origin master
cd $HOME/src/secret_stuff/
# Add all files to the repository 
git add .
# Commit changes with message with current date stamp
git commit -m "$HOME/bin files on `date +'%d-%m-%Y %H:%M:%S'`"
# Push changes towards GitHub
git push -u origin main
cd $HOME/src/ansible/
# Add all files to the repository 
git add .
# Commit changes with message with current date stamp
git commit -m "$HOME/bin files on `date +'%d-%m-%Y %H:%M:%S'`"
# Push changes towards GitHub
git push -u origin main
